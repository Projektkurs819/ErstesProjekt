        <Label Name="lblRing2" HorizontalAlignment="Left" Margin="357,126,0,0" VerticalAlignment="Top" Height="30" Width="8" Background="#00000000"/>
        <Label Name="lblRing3" HorizontalAlignment="Left" Margin="380,126,0,0" VerticalAlignment="Top" Height="30" Width="8" Background="#00000000"/>
