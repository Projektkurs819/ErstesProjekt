        <TextBox x:Name="txt_SpannungQuelle" HorizontalAlignment="Left" Height="31" Margin="33,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="126"/>
        <TextBox x:Name="txt_Spannungsabfall" HorizontalAlignment="Left" Height="31" Margin="33,212,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="126"/>
        <TextBox x:Name="txt_Stromverbrauch" HorizontalAlignment="Left" Height="31" Margin="33,295,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="126"/>
        <Label Content="Spannung in Volt" HorizontalAlignment="Left" Margin="33,95,0,0" VerticalAlignment="Top" Width="126"/>
