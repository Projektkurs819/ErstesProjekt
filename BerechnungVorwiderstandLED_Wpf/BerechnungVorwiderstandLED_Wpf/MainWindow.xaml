        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="6" Margin="550,295,0,0" Stroke="Black" VerticalAlignment="Top" Width="74"/>

        <Polygon  
    Points="150,100 200,67 200,135 150,100"  
    Stroke="Purple"
    StrokeThickness="2" RenderTransformOrigin="0.5,0.5" Margin="398,-61,-192,59">
            <Polygon.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.093"/>
