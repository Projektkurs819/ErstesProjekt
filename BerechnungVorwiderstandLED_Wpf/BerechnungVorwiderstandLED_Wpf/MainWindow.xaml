        xmlns:local="clr-namespace:BerechnungVorwiderstandLED_Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-8,0" HorizontalAlignment="Left" Width="800">
        <Rectangle x:Name="rec_Widerstand" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="32" Margin="295,125,0,0" Stroke="Black" VerticalAlignment="Top" Width="156"/>
